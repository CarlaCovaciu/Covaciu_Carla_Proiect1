@page "/{id:int?}"
@model Covaciu_Carla_Proiect1.Pages.Laptops.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Laptops</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Laptop[0].Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Laptop[0].Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Laptop[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Laptop[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Laptop[0].Store.StoreName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Laptop[0].LaptopCategories)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.LaptopD.Laptops)
        {

            string selectedRow = "";
            if (item.ID == Model.LaptopID)
            {
                selectedRow = "table-success";
            }
        <tr class="@selectedRow">
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Store.StoreName)
            </td>
            <td>
                @{
                    foreach (var category in item.LaptopCategories)
                    {
                        @category.Category.ID @: @category.Category.CategoryName <br />
                    }
                }
            </td>

            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
            }
        </tbody>
</table>
